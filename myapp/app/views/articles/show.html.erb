<p id="notice"><%= notice %></p>

<h1>
  <%= @article.titulo %>
</h1>

<span><%= @article.created_at %></span>

<h2>
  <%= @article.bajada %>
</h2>

<p>
  <%= @article.cuerpo %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

